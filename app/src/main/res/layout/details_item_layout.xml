<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:orientation="vertical">

    <TextView
        android:id="@+id/details_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Date"/>

    <ImageView
        android:id="@+id/details_img"
        app:layout_constraintTop_toBottomOf="@id/details_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/details_temp"
        app:layout_constraintTop_toBottomOf="@id/details_date"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        android:text="Temp"/>

    <TextView
        android:id="@+id/details_wind"
        app:layout_constraintTop_toBottomOf="@id/details_temp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        android:text="Wind"/>

    <TextView
        android:id="@+id/details_description"
        app:layout_constraintTop_toBottomOf="@id/details_wind"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        android:text="Description"/>


</android.support.constraint.ConstraintLayout>